<body>
    <header>

        <div id="menu-bar" class="fas fa-bars"></div>

        <a href="@Url.Action("Content", "Home")" class="logo"><span>T</span>ravel</a>

        <nav class="navbar">
            <a href="@Url.Action("Content", "Home")">Trang chủ</a>
            <a href="@Url.Action("GioiThieu", "Home")">Giới thiệu</a>
            <a href="@Url.Action("Index", "Product")">Tour</a>
            <a href="@Url.Action("TinTuc", "Home")">Tin tức</a>
        </nav>

        <div class="icons">
            <i class="fas fa-search" id="search-btn"></i>
            <i class="fas fa-user" id="login-btn" style="color: #333; cursor: default; margin-right: 6px;"></i>
            @if (Session["TaiKhoan"] != null)
            {
                <a href="#" style="font-size: 16px">Trang admin</a>
                <a href="~/User/Logout" style="font-size: 16px; padding-left: 8px;">Đăng xuất</a>
            }
            else
            {
                <a href="~/User/Login" style="font-size: 16px">Đăng nhập</a>
                <a href="~/User/Register" style="font-size: 16px; padding-left: 8px;">Đăng ký</a>
            }
        </div>

        <div action="" class="search-bar-container">
            @using (Html.BeginForm("KetQuaTimKiem", "Search", FormMethod.Post, new { @class = "search-form" }))
            {
                <input type="search" id="search-bar" placeholder="Bạn muốn đến đâu?" name="txtTimKiem">
                <input type="submit" for="search-bar" class="search" value="Tìm kiếm">
            }

        </div>


    </header>
    <span style="padding-bottom: 80px; display: block;"></span>

    <!-- header section ends -->


    <div>
        <table>
            <tr>
                <td class="content-menu col-lg-3">
                    @{ Html.RenderAction("CategoryPartial", "Categories");}
                </td>
                <td class="content-main col-lg-12">
                    @RenderBody()
                </td>
            </tr>
        </table>
    </div>

    <!-- ======= Footer ======= -->
